<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/notification_background"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/action_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/notification_text"
            android:text="歌曲名"
            android:id="@+id/title_name"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/author_name"
            android:textColor="@color/notification_text"
            android:text="歌手名" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_weight="3"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/media_previous"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/media_previous" />

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/media_pause"
            android:layout_marginStart="10dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/media_pause" />

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/media_next"
            android:layout_marginStart="10dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/media_next" />
    </LinearLayout>

</LinearLayout>